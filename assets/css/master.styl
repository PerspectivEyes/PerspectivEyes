@import 'jeet'
@import 'axis'
@import '_settings'
@import url(https//fonts.googleapis.com/css?family=Montserrat400,700)

normalize-css()
base()
forms()
buttons()
code-blocks()
tables()
bold-italic()
headers()
lists()
text-selection()

html
body
  width 100%
  height 100%
  font-family "Montserrat"
  font-weight 400

/* NAV */
$nav_height = 80px 

#nav_top_buffer
  height $nav_height  

nav
  group()
  uppercase()
  width 100%
  height $nav_height
  background-color #FFFFFF
  display block
  position fixed 
  z-index 999
   
  img.slicknav_brand
    display block
    padding 0px
    color transparent
    float left
    height 100%
    margin-left 40px

  .nav_list
    width 80% 
    height 60px
    border 5px
    padding 10px
    float left
    
    ul
      float right

      li
        text-margin()
        list-style-type none
        margin-right 30px
        float left
        text-align right
        
        a
          letter-spacing 1px
          link: #00A3B4 'darken'
        
      +below(1000px)
        display none

  .book_button
      background-color #00A3B4
      height 100%
      float right
      letter-spacing 1px
      width 18%
      text-decoration none
        
      p
        margin 0px
        padding 0px 10px 
        color #FFFFFF
        text-align center
        vertically-align()  
    
/* Banner */
#banner-video
  position relative
  box-sizing border-box
  overflow hidden
  background-color #000000
  transform-style preserve-3d
  -webkit-transform-style preserve-3d
  -moz-transform-style preserve-3d

  video
    width 130%
    background-color #000000

#banner
  position relative
  box-sizing border-box
  overflow hidden
  transform-style preserve-3d
  -webkit-transform-style preserve-3d
  -moz-transform-style preserve-3d
  background-color #FFFFFF
  height 518px
    
  img
    width 100%
    background-position center
    background-size cover
  
#banner-text
  position absolute
  top 60%
  right 5%
  -webkit-transform translateY(-73%)
  -ms-transform translateY(-73%)
  transform translateY(-73%)
  color #FFFFFF

/* Video */
.video-container
  position relative
  padding-bottom 56.25%
  padding-top 35px
  height 0
  overflow hidden
  margin-top 20px
  margin-bottom 30px
    
  iframe
    width 100%
    height 100%
    position absolute
    top 0
    left 0
    bottom 0
    right 0
    margin auto

iframe
  max-width 95%

video
  display block
  
/* Text & Content */
#main-content
  h3
    padding-top 80px
    uppercase()
    

  center()
  width 940px
  margin-top 20px
  padding 20px 0px
  
  +below(1125px)
    width 340px

.main-text h6 
  padding 0px 5px
  font-size 1.2em
  margin-bottom 40px

.one-column
  column(1)
  
.two-columns
  column(1/2, gutter: .5)

  +below(1125px)
    column(1/2)
    center()
  
.three-columns
  column(1/3, gutter: .5)

  +below(1125px)
    column(1/2)
    center()
    
.four-columns
  column(1/4, gutter: .5)
  
  +below(1125px)
    column(1/2)
    center()

.text
  &-center 
    text-align center

  &-left 
    text-align left

  &-right 
    text-align right

  &-vcenter 
    display table-cell
    text-align center
    vertically-align()
    
  &-container 
    position absolute
    top 50%
    left 15%
    -webkit-transform translateY(-50%)
    -ms-transform translateY(-50%)
    transform translateY(-50%)
    color #FFFFFF

/* Other Styling */
.items 
  display table-cell
  vertically-align()

.book-btn
  hover-darken()
  width 120px
  height 120px
  margin 40px
  background-color #00A3B4
  border-radius 50%
  color #FFFFFF
  text-align center
  padding 0px 0px
  font-size 16px
  font-weight 400
  line-height normal
  letter-spacing normal
  text-transform none
  white-space normal
  border none
  box-sizing border-box

    background-color #003F4E !important
    font-weight 400
    color #FFFFFF

.service
  .eye_
    &logo
      img
        width 165px
        
    &test
      img    
        width 106px
        
    &glasses      
      img
        width 138px    

.time 
  margin-left 15px
  display inline
  font-weight normal

.image-circle 
  border-radius 50%
  display inline
  width 200px
  height 200px

.headshot
  margin-top 30px
  width 200px
  height 200px

#footer 
  width 100%
  background-color #F4F4F4
  padding 20px 0px

  i 
    margin 0px 10px

.social
  [class*="fa fa-"]
    hover-darken()
    background-color #00A3B4
    border-radius 30px
    color #FFFFFF
    display inline-block
    height 30px
    line-height 30px
    width 30px
    font-size 15px
    text-align center