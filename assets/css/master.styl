@import 'jeet'
@import 'axis'
@import '_settings'
@import url(https://fonts.googleapis.com/css?family=Montserrat);

normalize-css()
base()
forms()
buttons()
code-blocks()
bold-italic()
headers()
lists()
text-selection()

/* VARIABLES */
$nav_height = 80px 
$banner_height = 900px
$testimonial_height = 500px

$white           = #ffffff
$black           = #000000
$primary_green   = #00A3B4
$secondary_green = #003F4E
$section_color_a = #ffffff
$section_color_b = #f0f0f0

html
body
  width 100%
  height 100%
  font-family "Montserrat"
  font-weight 400
    
/* SECTION BACKGROUND COLORS*/
#about
  background-color $section_color_a
  width 100%

#services
  background-color $section_color_b
  width 100%
  
#team
  background-color $section_color_a
  width 100%
  
#contact
  background-color $section_color_b
  width 100%
  
/* NAV */
#nav_top_buffer
  height $nav_height  

nav
  group()
  uppercase()
  width 100%
  height $nav_height
  background-color $white
  display block
  position fixed 
  z-index 999
   
  img.slicknav_brand
    display block
    padding 0px
    color transparent
    float left
    height 100%
    margin-left 40px

  .nav_list
    width 80% 
    height 60px
    border 5px
    padding 10px
    float left
    
    +below(1000px)
      width 60% 
      height 60px
      border 5px
      padding 10px
    
    ul
      float right

      li
        text-margin()
        list-style-type none
        margin-right 30px
        float left
        text-align right
        display inline-block
        position relative
        
        &:hover 
          &:before
            content ""
            position absolute
            bottom -10px
            background $primary_green
            width 8px
            height 8px
            border-radius 100%
            left calc(50% - 4px)
        
        a
          letter-spacing 1px
          link: $primary_green 'darken'
        
      +below(1000px)
        display none

  .book_button
      background-color $primary_green
      height 100%
      float right
      letter-spacing 1px
      width 18%
      text-decoration none
      hover-darken()
      display: table;
      
      .book_text
        display table-cell
        vertical-align middle
        
        p
          margin 0px
          padding 0px 10px 
          color $white
          text-align center
          
          +below(1000px)
            p: 12px
            
          +below(700px)
            p: 10px
    
/* Banner */
#banner_top_buffer
  height $banner_height
  +below(999px)
    height 470px
  +below(800px)
    height 320px
  +below(600px)
    height 200px  
  +below(400px)
    height 150px

.banner_video
  position fixed
  box-sizing border-box
  overflow hidden
  background-color $black
  transform-style preserve-3d
  -webkit-transform-style preserve-3d
  -moz-transform-style preserve-3d
  z-index -1

  video
    display block
    width 130%
    background-color $black

.banner_text
  position absolute
  top 60%
  right 5%
  -webkit-transform translateY(-73%)
  -ms-transform translateY(-73%)
  transform translateY(-73%)
  color $white
  
  h1 
    +below(700px)
      font-size 30px
    +below(500px)
      font-size 20px

.banner
  position relative
  box-sizing border-box
  overflow hidden
  transform-style preserve-3d
  -webkit-transform-style preserve-3d
  -moz-transform-style preserve-3d
  background-color $white
  height 518px
    
  img
    width 100%
    display block
    background-color $primary_green
    background-position center
    background-size cover
    
/* ABOUT */
#about
  
  .video-container
    position relative
    padding-bottom 56.25%
    padding-top 35px
    height 0
    overflow hidden
    margin-top 20px
    margin-bottom 30px
    
  iframe
    width 100%
    height 100%
    position absolute
    top 0
    left 0
    bottom 0
    right 0
    margin auto


/* SERVICES */
#services

  .services_list

    .services
      &_icons
        group()
        position relative
        height 150px
              
      &_eye_logo
          img
            width 165px
        
      &_eye_test
          img    
            width 106px
            
      &_eye_glasses      
          img
            width 138px  
    
      &_text
        group()
        position relative
        height 120px
        uppercase()
        
        p
          p: 12px false
          
/* TESTIMONIAL */
#testimonials
  height $testimonial_height
  
  .testimonial
    position relative
    display block
    
    .testimonials_background
      position absolute
      width 100%
      top 0
      right 0
      background-color $primary_green
      box-sizing border-box
      overflow hidden
      background-size 100% auto
      transform-style preserve-3d
      -webkit-transform-style preserve-3d
      -moz-transform-style preserve-3d
          
      img
        height 100%
        display block
        background-position right bottom
        background-size cover
        mix-blend-mode soft-light

    .testimonials_text
      top $testimonial_height*.3
      bottom 0
      left 0
      right 0
      z-index 2
      position absolute
      color $white
      
      hr
        width 25%
        
      .quote
        bold()
        letter-spacing 2px
        text-align center
        font-size 20px
        
      .signature
        italic()
        letter-spacing 1px
        text-align center
        font-size 15px

/* TEAM */    
#team
  position relative
  
  .simple-modal
    
    .image-circle 
      border-radius 50%
      display inline
      width 200px
      height 200px
    
    .headshot
      margin-top 30px
      width 200px
      height 200px

/* CONTACT */
#contact
  position relative
  z-index 1
  p
    text-align left
    
  #contact_map
    float left

    img
      width 100% 

    p
      normal()
      text-align left
      p: 14px false
      line-height 10px
      reset-case()
    
  #contact_info
    text-align left
    
    
    .label
      bold()
      p: 16px
      line-height 10px
      
      p
        normal()
        p: 14px false
        line-height 20px
        reset-case() 

    th
      p: 16px
      height 35px  
      
    .day
    .hours
      height 20px
                

/* GLOBAL STYLES */
#main-content
  center()
  width 940px
  padding 60px 0px
  padding-bottom 60px
  
  h3
    uppercase()
  
  +below(1125px)
    width 800px
  +below(999px)
    width 750px
  +below(800px)
    width 650px
  +below(600px)
    width 500px  
  +below(400px)
    width 320px
    
.text
  &-center 
    text-align center

  &-right 
    text-align right

  &-vcenter 
    display table-cell
    text-align center
    vertically-align()
    
  &-container 
    position absolute
    top 50%
    left 15%
    -webkit-transform translateY(-50%)
    -ms-transform translateY(-50%)
    transform translateY(-50%)
    color $white

  // Columns  
.two-columns
  column(1/2, gutter: 5)

  +below(1125px)
    column(1/2)
    center()
  
.three-columns
  column(1/3, gutter: .5)

  +below(1125px)
    column(1/2)
    center()
    
.four-columns
  column(1/4, gutter: .5)
  
  +below(1125px)
    column(1/2)
    center()

.two-col-text
  -webkit-columns 2 200px
  -moz-columns 2 200px
  columns 2 200px
  -moz-column-gap 20px
  -webkit-column-gap 20px
  text-align justify

.bottom_center
  position absolute
  margin auto
  left 0
  right 0
  bottom 0px
  padding-bottom 10px

/* FOOTER */
#footer 
  width 100%
  background-color $primary_green
  padding 20px 0px

  i 
    margin 0px 10px

  .social
    [class*="fa fa-"]
      hover-darken()
      background-color $primary_green
      border-radius 30px
      border-style solid
      border-color $white
      border-width thin
      color $white
      display inline-block
      height 30px
      line-height 30px
      width 30px
      font-size 15px
      text-align center
    
#copyright
  font-size .5 em
  width 100%
  color $white
  background-color $secondary_green
  padding 5px 0px
  text-align center
  