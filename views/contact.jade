//- about.jade
// About Us Mixin
mixin about_us(name, nickname, profession, image)
  .four-columns
    .simple-modal(data-modal= nickname)
      img.image-circle.headshot(src='img/'+image)
      h5!= name
      h6!= profession
    br

extends ./_layouts/one-page.jade

block variables
  - var pagetitle= 'Contact'
  - var banner_image= 'img/banner/about.jpg'

block content
  
  #main-content.text-center.container
    h3 Contact

      #location
        #map.two-columns
          img(style='width: 90%;', src='img/map.png')                
          br
          | 629 Eastern Pkwy               
          br
          | Unit M4, Ste 202, Brooklyn, NYC 11213               
          br
          br     

        #contact.two-columns
          span(style='font-weight:bold; color: #003F4E;') Phone            
            br
            | (718) 708 - 5360
            br
            br

          span.days.text-left(style='font-weight: bold; color: #003F4E;')
            span(style='color: #003F4E;') Hours            
              br
              | Monday: 
              .time 10:00 AM - 6:00 PM         
              br
              | Tuesday:
              .time 10:00 AM - 6:00 PM          
              br
              | Wednesday:
              .time 10:00 AM - 6:00 PM                
              br
              | Thursday:
              .time 10:00 AM - 7:00 PM 
              br
              | Friday:
              .time 10:00 AM - 6:00 PM
              br
              | Saturday:
